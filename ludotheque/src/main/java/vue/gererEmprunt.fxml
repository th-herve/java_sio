<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.scene.GererEmpruntControleur">
   <center>
      <TableView fx:id="tableEmprunt" prefHeight="436.0" prefWidth="741.0">
        <columns>
          <TableColumn fx:id="idJeuPhysique" prefWidth="69.0" text="Id jeu" />
            <TableColumn fx:id="nomJeuPhysique" prefWidth="155.0" text="Nom jeu" />
            <TableColumn fx:id="idAdherent" minWidth="9.0" prefWidth="90.0" text="Id adhérent" />
            <TableColumn fx:id="nomAdherent" prefWidth="185.0" text="Nom adhérent" />
          <TableColumn fx:id="dateEmprunt" prefWidth="135.0" text="Date emprunt" />
            <TableColumn fx:id="dateRetour" prefWidth="106.0" text="Date de retour" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="mainLabel" prefHeight="66.0" prefWidth="556.0" text="Emprunt">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <right>
      <VBox spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefWidth="296.0" spacing="10.0" style="-fx-border-color: lightGray; -fx-border-radius: 10;">
               <children>
                  <Label text="Ajouter :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="BOTTOM_CENTER" spacing="10.0">
                     <children>
                        <VBox prefHeight="60.0" prefWidth="249.0" spacing="10.0">
                           <children>
                              <HBox spacing="20.0">
                                 <children>
                                    <TextField fx:id="newIdJeu" maxWidth="80.0" promptText="Id jeu" />
                                    <Label fx:id="labelNewIdJeu" />
                                 </children>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <TextField fx:id="newIdAdherent" maxWidth="80.0" promptText="Id adhérent" />
                                    <Label fx:id="labelNewIdAdherent" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <Button mnemonicParsing="false" onAction="#ajouterEmprunt" prefHeight="5.0" prefWidth="1.0" style="-fx-background-color: green; -fx-background-radius: 10;" text="+" textFill="WHITE">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Button mnemonicParsing="false" onAction="#enregistrerRetour" text="Enregistrer retour">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#supprimerRetour" text="Supprimer">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToAccueil" text="Retour à la page d'accueil">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </right>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</BorderPane>
