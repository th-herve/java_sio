<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="442.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.scene.AccueilControleur">
   <top>
      <ImageView fitHeight="106.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="BOTTOM_LEFT">
         <image>
            <Image url="@../../../images/logo_bettonludotheque.png" />
         </image>
      </ImageView>
   </top>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <bottom>
      <VBox alignment="TOP_CENTER" prefHeight="292.0" prefWidth="408.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="userNameLabel" prefHeight="25.0" prefWidth="397.0" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="labelPrincipale" text="Accueil">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#switchToGererAdherent" prefWidth="150.0" text="Gérer comptes">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefWidth="150.0" text="Gérer emprunts">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToGererJeu" prefWidth="150.0" text="Gérer jeux">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="deconnecter" mnemonicParsing="false" onAction="#switchToconnexionPage" prefHeight="24.0" prefWidth="150.0" text="déconnecter">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </bottom>
</BorderPane>
