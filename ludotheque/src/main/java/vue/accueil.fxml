<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="442.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.scene.AccueilControleur">
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="351.0" prefWidth="600.0" spacing="30.0">
         <children>
            <Label fx:id="labelPrincipale" text="Accueil">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#switchToGererAdherent" prefWidth="150.0" text="Gérer comptes">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#switchToGererEmprunt" prefWidth="150.0" text="Gérer emprunts">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
          <Button mnemonicParsing="false" onAction="#switchToGererJeu" prefWidth="150.0" text="Gérer jeux">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <ImageView fitHeight="106.0" fitWidth="167.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="BOTTOM_LEFT">
         <image>
            <Image url="@../../../images/logo_bettonludotheque.png" />
         </image>
      </ImageView>
   </top>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</BorderPane>
