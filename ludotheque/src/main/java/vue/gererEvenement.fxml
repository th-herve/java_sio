<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.scene.GererEvenementControleur">
   <center>
      <TableView fx:id="tableEvenement" prefWidth="509.0" styleClass="stripped">
        <columns>
          <TableColumn fx:id="id" prefWidth="69.0" text="id" />
            <TableColumn fx:id="nom" prefWidth="185.0" text="Nom" />
          <TableColumn fx:id="dateEvenement" prefWidth="135.0" text="Date" />
            <TableColumn fx:id="idJeu" prefWidth="106.0" text="Id jeu" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="mainLabel" prefHeight="66.0" prefWidth="556.0" text="Evenement">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <right>
      <VBox spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="119.0" prefWidth="289.0" spacing="10.0" style="-fx-border-color: lightGray; -fx-border-radius: 10;">
               <children>
                  <Label text="Ajouter :">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="BOTTOM_CENTER" spacing="10.0">
                     <children>
                        <VBox prefHeight="60.0" prefWidth="249.0" spacing="10.0">
                           <children>
                              <HBox spacing="20.0">
                                 <children>
                                    <TextField fx:id="newNom" prefHeight="25.0" prefWidth="105.0" promptText="Nom" />
                                 </children>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <DatePicker fx:id="newDateEvenement" prefHeight="25.0" prefWidth="105.0" promptText="Date" />
                                    <Label fx:id="labelNewIdAdherent" />
                                 </children>
                              </HBox>
                              <HBox spacing="20.0">
                                 <children>
                                    <TextField fx:id="newIdJeu" prefHeight="25.0" prefWidth="108.0" promptText="Id jeu" />
                                    <Label fx:id="labelNewIdJeu" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <Button mnemonicParsing="false" onAction="#ajouterEvenement" prefHeight="5.0" prefWidth="1.0" style="-fx-background-radius: 10;" styleClass="success" text="+" textFill="WHITE">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToAccueil" styleClass="accent" text="Retour Ã  la page d'accueil">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </right>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</BorderPane>
